{
  "name": "pomodoro",
  "description": "pomodoro in chrome browser",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "name": "Click to start a work"
  },
  "permissions": [
    "notifications",
    "contextMenus"
  ],
  "commands": {
    "start_work": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Start a work"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2
}